{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block nav_avatar %}
    {% if membre_avatarFilename %}
        <img class="rounded-full w-[38px] aspect-square" src="{{ asset('img/avatars/' ~ membre_avatarFilename) }}" id="img" alt="Image de profil personnalisee">
    {% else %}
        <div class="text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-medium rounded-full text-sm px-2.5 py-[10px] text-center cursor-pointer">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 18">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-2 3h4a4 4 0 0 1 4 4v2H1v-2a4 4 0 0 1 4-4Z"/>
            </svg>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="w-full bg-cuiGray rounded-lg shadow sm:max-w-lg my-3">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl text-white font-bold leading-tight tracking-tight md:text-2xl">
                Inscrivez vous
            </h1>

            {{ form_start(form, {'attr': {'id': 'form_register', 'class': 'space-y-4 md:space-y-6'}}) }}

            <div class="text-sm text-red-500">
                {{ form_errors(form) }}
            </div>

            <div>
                {{ form_label(
                    form.email,
                    'Adresse e-mail',
                    {
                        'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.email.vars.valid ? '' : ' text-red-500'),
                        },
                    }
                ) }}
                {{ form_widget(
                    form.email,
                    {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' ~ (form.email.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                            'placeholder': 'chef@cuisi.ne',
                        },
                    }
                ) }}
                <div class="mt-2 text-sm text-red-500">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div>
                {{ form_label(
                    form.password,
                    'Mot de passe',
                    {
                        'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.password.vars.valid ? '' : ' text-red-500'),
                        },
                    }
                ) }}
                {{ form_widget(
                    form.password,
                    {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' ~ (form.password.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                            'placeholder': 'Mot de passe',
                        },
                    }
                ) }}
                <div class="mt-2 text-sm text-red-500">
                    {{ form_errors(form.password) }}
                </div>
            </div>

            <div>
                {{ form_label(
                    form.firstname,
                    'Prénom',
                    {
                        'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.firstname.vars.valid ? '' : ' text-red-500'),
                        },
                    }
                ) }}
                {{ form_widget(
                    form.firstname,
                    {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' ~ (form.firstname.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                            'placeholder': 'Jean',
                        },
                    }
                ) }}
                <div class="mt-2 text-sm text-red-500">
                    {{ form_errors(form.firstname) }}
                </div>
            </div>

            <div>
                {{ form_label(
                    form.lastname,
                    'Nom',
                    {
                        'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.lastname.vars.valid ? '' : ' text-red-500'),
                        },
                    }
                ) }}
                {{ form_widget(
                    form.lastname,
                    {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' ~ (form.lastname.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                            'placeholder': 'Martin',
                        },
                    }
                ) }}
                <div class="mt-2 text-sm text-red-500">
                    {{ form_errors(form.lastname) }}
                </div>
            </div>

            <div>
                {{ form_label(
                    form.phone,
                    'Numéro de téléphone',
                    {
                        'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.phone.vars.valid ? '' : ' text-red-500'),
                        },
                    }
                ) }}
                {{ form_widget(
                    form.phone,
                    {
                        'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' ~ (form.phone.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                            'placeholder': '06XXXXXXXX',
                        },
                    }
                ) }}
                <div class="mt-2 text-sm text-red-500">
                    {{ form_errors(form.phone) }}
                </div>
            </div>

            <button
                    type="submit"
                    class="w-full text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
            >S'inscrire
            </button>

            <p class="text-sm font-light text-white">
                Déjà chef ? <a
                        href="{{ path('app_login') }}" class="font-medium text-white hover:underline"
                >Se connecter</a>
            </p>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
