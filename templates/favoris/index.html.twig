{% extends 'base.html.twig' %}

{% block title %}Vos Favoris!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="my-recipes">
    <h1>Vos recettes préférées :</h1>
    <ul class="favs">
        {% for fav in favoris %}
            <li class="recipe-item" style="display: flex">
                <div>
                    <a href="{{ detail_recette_app }}">
                        <img src="https://assets.afcdn.com/recipe/20220126/128053_s280cxt0cyt0cxb1732cyb1732.jpg">
                    </a>
                    <div class="details-recipe" style="display: flex">
                        <a href="{{ detail_recette_app }}">{{ title-recipe }}</a>
                        <br>
                        <span>{{ desc-recipe }}</span>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
