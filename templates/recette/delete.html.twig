{% extends 'base.html.twig' %}

{% set title = "Suppression de #{ recipe.nomRecette|capitalize }" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="w-full bg-cuiGray rounded-lg shadow sm:max-w-lg my-3">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl text-white font-bold leading-tight tracking-tight md:text-2xl">
                {{ title }}
            </h1>

            {{ form_start(form, { attr: { class: "flex gap-3" } }) }}

            {{ form_row(form.delete, {
                label: 'Supprimer',
                attr: { class: "text-white font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-red-600 hover:bg-red-700" } }) }}

            {{ form_row(form.cancel, {
                label: 'Annuler',
                attr: { class: "border font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-cuiGrayDark text-white border-cuiGrayDark hover:bg-cuiGray hover:border-cuiGrayLight" } }) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
