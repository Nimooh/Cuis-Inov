{% extends 'base.html.twig' %}

{% set title = "Suppression de #{ recipe.nomRecette|capitalize }" %}

{% block title %}{{ title }}{% endblock %}

{% block nav_avatar %}
    {% if membre_avatarFilename %}
        <img class="rounded-full w-[38px] aspect-square" src="{{ asset('img/avatars/' ~ membre_avatarFilename) }}" id="img" alt="Image de profil personnalisee">
    {% else %}
        <div class="text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-medium rounded-full text-sm px-2.5 py-[10px] text-center cursor-pointer">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 18">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-2 3h4a4 4 0 0 1 4 4v2H1v-2a4 4 0 0 1 4-4Z"/>
            </svg>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="w-full bg-cuiGray rounded-lg shadow sm:max-w-lg my-3">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl text-white font-bold leading-tight tracking-tight md:text-2xl">
                {{ title }}
            </h1>

            {{ form_start(form, { attr: { class: "flex gap-3" } }) }}

            {{ form_row(form.delete, {
                label: 'Supprimer',
                attr: { class: "text-white font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-red-600 hover:bg-red-700" } }) }}

            {{ form_row(form.cancel, {
                label: 'Annuler',
                attr: { class: "border font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-cuiGrayDark text-white border-cuiGrayDark hover:bg-cuiGray hover:border-cuiGrayLight" } }) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
