        }
    ) }} #}
    <ul class="flex flex-col w-full text-gray-50 sm:text-sm rounded-lg p-2.5 gap-2">
        {% for id, choice in form.categoriesRecette.vars.choices %}
            <li class="flex items-center gap-3">
                {% set input_id = form.categoriesRecette.vars.id ~ '_' ~ id %}
                <input
                        type="checkbox" id="{{ input_id }}" name="{{ form.categoriesRecette.vars.full_name }}[]"
                        value="{{ id }}"
                        class="w-4 h-4 text-cuiOrange bg-gray-100 border-gray-300 rounded focus:ring-0 focus:ring-offset-0"
                        {{ form.categoriesRecette[id].vars.checked ? 'checked="checked"' }}
                >
                <label for="{{ input_id }}" class="text-sm">{{ choice.label }}</label>
            </li>
        {% endfor %}
    </ul>

    <div class="mt-2 text-sm text-red-500">
        {{ form_errors(form.categoriesRecette) }}
    </div>
</div>

<div>
    {{ form_label(
        form.composers,
        'Ingrédients',
        {
            'label_attr': {
            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.composers.vars.valid ? '' : ' text-red-500'),
        },
