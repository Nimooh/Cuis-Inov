            form.tempsRecette,
            {
                'attr': {
                'class': 'text-gray-900 sm:text-sm block w-full p-2.5' ~ (form.tempsRecette.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                'placeholder': '',
            },
            }
        ) }} #}
        <input
