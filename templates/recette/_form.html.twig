{{ form_start(form, {'attr': {'id': 'form_crud_recette', 'class': 'space-y-4 md:space-y-6'}}) }}

<div class="text-sm text-red-500">
    {{ form_errors(form) }}
</div>

<div>
    {{ form_label(
        form.nomRecette,
        'Nom de la recette',
        {
            'label_attr': {
            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.nomRecette.vars.valid ? '' : ' text-red-500'),
        },
        }
    ) }}
    {{ form_widget(
        form.nomRecette,
        {
            'attr': {
            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5' ~ (form.nomRecette.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
            'placeholder': '',
        },
        }
    ) }}
    <div class="mt-2 text-sm text-red-500">
        {{ form_errors(form.nomRecette) }}
    </div>
</div>

<div class="flex gap-5">
    <div class="w-full">
        {{ form_label(
            form.tempsRecette,
            'Durée (minutes)',
            {
