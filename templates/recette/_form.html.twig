        form.categoriesRecette,
        'Catégories',
        {
            'label_attr': {
            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.categoriesRecette.vars.valid ? '' : ' text-red-500'),
        },
        }
    ) }}
    {#    {{ form_widget(
        form.categoriesRecette,
        {
            'attr': {
                'class': 'flex flex-col text-gray-50 sm:text-sm w-full p-2.5',
                'placeholder': '',
