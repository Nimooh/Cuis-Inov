                name="{{ form.tempsRecette.minutes.vars.full_name }}" {{ form.tempsRecette.minutes.vars.required ? 'required="required"' }}
                value="{{ form.tempsRecette.minutes.vars.value }}"
                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5"
