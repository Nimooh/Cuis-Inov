    ) }}
    {# {{ form_widget(
        form.composers,
        {
            'attr': {
            'class': 'text-gray-900 sm:text-sm block w-full p-2.5' ~ (form.composers.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
            'placeholder': '',
        },
        }
    ) }} #}
    <ul
            class="composersCollection flex flex-col gap-3 items-center"
            data-index="{{ form.composers|length > 0 ? form.composers|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(form.composers.vars.prototype)|e('html_attr') }}"
    >
        {% for ingrGroup in form.composers %}
            {{ form_widget(ingrGroup, { 'attr': { 'class': 'flex w-full' } }) }}
        {% endfor %}
    </ul>

    <button
            type="button"
            id="addIngredientBtn"
            class="w-full mt-2 text-sm text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-medium rounded-lg px-5 py-2.5 text-center"
            data-collection-holder-class="composersCollection"
    >
        Ajouter un ingrédient
    </button>

    <div class="mt-2 text-sm text-red-500">
        {{ form_errors(form.composers) }}
    </div>
</div>

<button
        type="submit"
        class="w-full text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
>{{ submit_label }}</button>

{# prevents those from rendering a 2nd time #}
{% do form.tempsRecette.setRendered() %}
{% do form.categoriesRecette.setRendered() %}
{% do form.composers.setRendered() %}

{{ form_end(form) }}

<script>
    const addDeleteBtn = (item) => {
        const removeButton = document.createElement('button');

        removeButton.type = "button";
        removeButton.classList = "ml-3 text-white bg-red-600 hover:bg-red-800 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center";
        removeButton.innerHTML = `
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
                <path d="M17 4h-4V2a2 2 0 0 0-2-2H7a2 2 0 0 0-2 2v2H1a1 1 0 0 0 0 2h1v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V6h1a1 1 0 1 0 0-2ZM7 2h4v2H7V2Zm1 14a1 1 0 1 1-2 0V8a1 1 0 0 1 2 0v8Zm4 0a1 1 0 0 1-2 0V8a1 1 0 0 1 2 0v8Z"/>
            </svg>
        `;

        removeButton.addEventListener('click', (e) => {
            e.preventDefault();
            item.remove();
        });

        item.append(removeButton);
    }

    document
        .querySelectorAll('ul.composersCollection > div')
        .forEach((ingr) => {
            addDeleteBtn(ingr)
        })

    document
        .querySelector('#addIngredientBtn')
        .addEventListener("click", (e) => {
            const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);
            const template = document.createElement('template');

            template.innerHTML = collectionHolder
                .dataset
                .prototype
                .replace(
                    /__name__/g,
                    collectionHolder.dataset.index
                );

            const item = template.content.firstChild;

            item.classList = "flex w-full";

            addDeleteBtn(item);

            collectionHolder.appendChild(item);

            collectionHolder.dataset.index++;
        })
</script>
