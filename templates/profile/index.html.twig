{% extends 'base.html.twig' %}

{% set member_id = member.getId() %}
{% set member_email = member.getEmail() %}
{% set member_role = member.getRoles()[0] %}
{% set member_lastName = member.getNomMembre() %}
{% set member_firstName = member.getPrnmMembre() %}
{% set member_phone = member.getTelMembre() %}

{% block title %}{{ member_firstName }} {{ member_lastName }}{% endblock %}

{% block body %}

    <div id="content" class="flex flex-col text-white w-full sm:max-w-md m-6">

        <section id="avatar" class="flex grow flex-col p-5">
            <a class="flex justify-center text-cuiGray p-2">
                <div class="flex bg-cuiOrange rounded-full px-5 py-5">
                    <svg class="w-20 h-20" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 18">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-2 3h4a4 4 0 0 1 4 4v2H1v-2a4 4 0 0 1 4-4Z"/>
                    </svg>
                </div>
            </a>
        </section>

        <section id="details" class="flex flex-col bg-cuiGray rounded-lg p-6 space-y-4 md:space-y-6 sm:p-8">
            <div id="profileHeader" class="flex flex-row justify-between content-center">
                <h1 class="text-xl text-white font-bold leading-tight tracking-tight md:text-2xl pt-2">Profil</h1>
                <a href="{{ path('app_profile_update') }}" class="text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                    Editer Profil
                </a>
            </div>
            <div id="profileInfo" class="pl-4 space-y-4 md:space-y-6">
                <dl>
                    <dt class="block mb-1 text-sm text-cuiOrange font-medium">Nom</dt>
                    <dd class="indent-4 text-cuiGrayLight">{{ member_lastName|capitalize }}</dd>

                    <dt class="block mb-1 text-sm text-cuiOrange font-medium">Prénom</dt>
                    <dd class="indent-4 text-cuiGrayLight">{{ member_firstName|capitalize }}</dd>

                    <dt class="block mb-1 text-sm text-cuiOrange font-medium">Email</dt>
                    <dd class="indent-4 text-cuiGrayLight">{{ member_email }}</dd>

                    <dt class="block mb-1 text-sm text-cuiOrange font-medium">Rôle</dt>
                    <dd class="indent-4 text-cuiGrayLight">
                        {% if member_role == "ROLE_USER" %}
                            Utilisateur
                        {% else %}
                            Administrateur
                        {% endif %}
                    </dd>

                    <dt class="block mb-1 text-sm text-cuiOrange font-medium">Téléphone</dt>
                    <dd class="indent-4 text-cuiGrayLight">{{ member_phone }}</dd>
                </dl>
            </div>
        </section>

    </div>

{% endblock %}

