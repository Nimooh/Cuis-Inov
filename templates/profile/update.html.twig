{% extends 'base.html.twig' %}

{% set membre_lastName = membre.getNomMembre() %}
{% set membre_firstName = membre.getPrnmMembre() %}

{% block title %}Edition de {{ membre_firstName }} {{ membre_lastName }}{% endblock %}

{% block body %}
    <div id="content" class="flex flex-col text-white m-6 gap-8 w-4/5 md:w-3/5">

        {{ form_start(form, {'attr': {'id': 'form_profile','class': ''}}) }}

        <section id="details" class="flex md:flex-row flex-col-reverse justify-between items-center">
            <div id="form_detailsInfo" class="flex flex-col align-start bg-cuiGray rounded-lg p-6 space-y-4 md:p-8 w-full md:max-w-xl shadow-lg h-full">
                <h1 class="flex text-xl text-white font-bold leading-tight tracking-tight md:text-2xl">Profil</h1>
                <div class="text-sm text-red-500">
                    {{ form_errors(form) }}
                </div>

                <div>
                    {{ form_label(
                        form.nomMembre,
                        'Nom',
                        {
                            'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.nomMembre.vars.valid ? '' : ' text-red-500'),
                        },
                        }
                    ) }}
                    {{ form_widget(
                        form.nomMembre,
                        {
                            'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-1' ~ (form.nomMembre.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                        },
                        }
                    ) }}
                    <div class="mt-2 text-sm text-red-500">
                        {{ form_errors(form.nomMembre) }}
                    </div>
                </div>

                <div>
                    {{ form_label(
                        form.prnmMembre,
                        'Prénom',
                        {
                            'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.prnmMembre.vars.valid ? '' : ' text-red-500'),
                        },
                        }
                    ) }}
                    {{ form_widget(
                        form.prnmMembre,
                        {
                            'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-1' ~ (form.prnmMembre.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                        },
                        }
                    ) }}
                    <div class="mt-2 text-sm text-red-500">
                        {{ form_errors(form.prnmMembre) }}
                    </div>
                </div>

                <div>
                    {{ form_label(
                        form.email,
                        'Adresse e-mail',
                        {
                            'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.email.vars.valid ? '' : ' text-red-500'),
                        },
                        }
                    ) }}
                    {{ form_widget(
                        form.email,
                        {
                            'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-1' ~ (form.email.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                        },
                        }
                    ) }}
                    <div class="mt-2 text-sm text-red-500">
                        {{ form_errors(form.email) }}
                    </div>
                </div>

                <div>
                    {{ form_label(
                        form.password,
                        'Mot de passe',
                        {
                            'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.password.vars.valid ? '' : ' text-red-500'),
                        },
                        }
                    ) }}
                    {{ form_widget(
                        form.password,
                        {
                            'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-1' ~ (form.password.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                        },
                        }
                    ) }}
                    <div class="mt-2 text-sm text-red-500">
                        {{ form_errors(form.password) }}
                    </div>
                </div>

                <div>
                    {{ form_label(
                        form.telMembre,
                        'Numéro de téléphone',
                        {
                            'label_attr': {
                            'class': 'block mb-2 text-sm text-cuiOrange font-medium' ~ (form.telMembre.vars.valid ? '' : ' text-red-500'),
                        },
                        }
                    ) }}
                    {{ form_widget(
                        form.telMembre,
                        {
                            'attr': {
                            'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-1' ~ (form.telMembre.vars.valid ? '' : 'bg-red-50 border-red-500 text-red-500 placeholder-red-500 focus:ring-red-500 focus:border-red-500'),
                        },
                        }
                    ) }}
                    <div class="mt-2 text-sm text-red-500">
                        {{ form_errors(form.telMembre) }}
                    </div>
                </div>

                <button type="submit" class="w-100 btn btn-primary">Modifier</button>
            </div>
            <div id="container_detailsAvatar" class="flex flex-col grow content-center justify-around p-8 gap-8">
                <div id="avatar" class="flex justify-center">
                    <a class="text-cuiGray">
                        <div class=" bg-cuiOrange rounded-full px-9 py-9 max-w-fit shadow-lg">
                            <svg class="w-20 h-20" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-2 3h4a4 4 0 0 1 4 4v2H1v-2a4 4 0 0 1 4-4Z"/>
                            </svg>
                        </div>
                    </a>
                </div>
                <div id="editButton" class="flex text-center justify-center">
                    <a href="{{ path('app_profile_update') }}" class="text-cuiGrayDark bg-cuiOrange hover:bg-cuiOrange/90 font-bold rounded-lg text-sm px-5 py-2.5 shadow-lg">
                        Editer Profil
                    </a>
                </div>
            </div>
        </section>

        {{ form_end(form) }}

    </div>

{% endblock %}
